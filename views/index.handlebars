<div class="row">

  <div class="col-md-4">
    <img src="/assets/img/burgercafe.png" alt="burger" class="img-responsive left-block" style="width:30%;height:0%;">
  </div>
  <div class="col-md-4">
    <h1 class="text-center">Eat-Da-Burger</h1>
    <form class="create-update-form createBurger text-center">
      <h5 class="text-center">Enter a burger you want to eat and click Submit!</h5>
      <div class="form-group">
        <label for="bg">Burger Name:</label>
        <textarea type="text" name="name" id="bg"></textarea>
        <br>
        <button class="btn btn-default" type="submit">Submit</button>
      </div>
    </form>
  </div>
  <div class="col-md-4">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4"></div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <ul>
        <h3>Uneaten Burgers</h3>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
          <h5>{{this.id}}. {{this.burger_name}}
            <form id={{this.id}} class="eatingBurger">
              <input type='hidden' name='devoured' value='true'>
              <button type='submit' class="btn btn-default">Devour It!</button>
            </form>
          </h5>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>


    <div class="col-md-6">

      <ul>
        <h3>Eaten Burgers</h3>
        {{#each burgers}} {{#if this.devoured}}
        <li>
          <h5>{{this.id}}. {{this.burger_name}}</h5>
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>